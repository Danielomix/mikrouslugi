{
	"info": {
		"_postman_id": "mikrouslugi-collection",
		"name": "Mikrous≈Çugi API",
		"description": "Complete API collection for testing the microservices",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
